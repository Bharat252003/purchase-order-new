# Copy to .env for local development and set values accordingly
# PostgreSQL / Postgres-compatible URL (overrides DB_HOST/USERNAME/.. when set)
# DATABASE_URL=postgres://username:password@host:5432/dbname

# Or set individual DB connection values
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=postgres
# DB_NAME=purchase_order_db

# MongoDB connection (used for the PoMasterMongo repo)
# MONGODB_URL=mongodb://username:password@host:27017/testMongo

# Set NODE_ENV=development when testing locally
# NODE_ENV=development
